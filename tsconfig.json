{
    "compilerOptions": {
        "target": "es5",
        "module": "esnext",
        "strict": true,
        "declaration": true,
        "outDir": "./lib",
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
}